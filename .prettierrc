{
    "plugins": ["prettier-plugin-apex"],
    "overrides": [
        {
            "files": "**/lwc/**/*.html",
            "options": {
                "parser": "lwc"
            }
        },
        {
            "files": "*.{cmp,page,component}",
            "options": {
                "parser": "html"
            }
        },
        {
            "files": "*.{cls,trigger}",
            "options": {
                "tabWidth": 4,
                "singleQuote": true
            }
        }
    ]
}
